    <section>
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <div class="left-sidebar">
                        <h2>Category</h2>
                        <div class="panel-group category-products" id="accordian">
                            <!--category-productsr-->
                            @foreach (var item in ViewBag.cate)
                            {
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">
                                            @*<a href="#">@item.category_name</a>*@
                                            @*<p> @Html.ActionLink(item.category_name, "Index", "Category", new { Id = item.category_id }, null)</p>*@
                                            <p><a href="/Product/ProductByCategory?Id=@item.CategoryId"> @item.CategoryName</a> </p>
                                        </h4>
                                    </div>
                                </div>
                            }

                        </div><!--/category-products-->

                        <div class="brands_products">
                            <!--brands_products-->
                            <h2>Brands</h2>
                            <div class="brands-name">
                                @foreach (var item in ViewBag.color)
                                {
                                    <ul class="nav nav-pills nav-stacked">
                                        <li> <p>  <a href="/Product/ProductByColor?Id=@item.ColorId"> @item.ColorName</a> </p></li>

                                    </ul>
                                }

                            </div>
                        </div><!--/brands_products-->



                        <div class="shipping text-center">
                            <!--shipping-->
                            <img src="~/content/images/home/shipping.jpg" alt="" />
                        </div><!--/shipping-->

                    </div>
                </div>
                <div class="col-sm-9">
                    <div class="blog-post-area">
                        <h2 class="title text-center">Blog Detail</h2>
                        <div class="single-blog-post">
                            <h3>@Model.bg.BlogTitle</h3>
                            <div class="post-meta">
                                <ul>
                                    <li><i class="fa fa-user"></i>@Model.bg.BlogAuthor</li>
                                    <li><i class="fa fa-clock-o"></i> 1:33 pm</li>
                                    <li><i class="fa fa-calendar"></i>@Model.bg.BlogCreatedate</li>
                                </ul>
                            </div>
                            <div>
                                @Html.Raw(Model.bg.BlogDetail)
                            </div>

                        </div>
                    </div><!--/blog-post-area-->

                    <div class="rating-area">
                        <ul class="ratings">
                            <li class="rate-this">Rate this item:</li>
                            <li>
                                <i class="fa fa-star color"></i>
                                <i class="fa fa-star color"></i>
                                <i class="fa fa-star color"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </li>
                            <li class="color">(6 votes)</li>
                        </ul>
                        <ul class="tag">
                            <li>TAG:</li>
                            <li><a class="color" href="">Pink <span>/</span></a></li>
                            <li><a class="color" href="">T-Shirt <span>/</span></a></li>
                            <li><a class="color" href="">Girls</a></li>
                        </ul>
                    </div><!--/rating-area-->
                    @*<div class="socials-share">
                    <a href=""><img src="~/Content/images/blog/socials.png" alt=""></a>
                    </div>*@<!--/socials-share-->
                    @if (Model.relateBlog != null)
                    {
                        <div class="media commnets">
                            <a class="pull-left" href="/Product/BlogDetail?Id=@Model.relateBlog.BlogId">
                                <img class="media-object" src="~/images/blog/@Model.relateBlog.BlogImages" alt="">
                            </a>
                            <div class="media-body">
                                <h4 class="media-heading">@Model.relateBlog.BlogTitle</h4>
                                <p>@Model.relateBlog.BlogDescriptions</p>
                                <div class="blog-socials">
                                    <ul>
                                        <li><a href=""><i class="fa fa-facebook"></i></a></li>
                                        <li><a href=""><i class="fa fa-twitter"></i></a></li>
                                        <li><a href=""><i class="fa fa-dribbble"></i></a></li>
                                        <li><a href=""><i class="fa fa-google-plus"></i></a></li>
                                    </ul>
                                    <a class="btn btn-primary" href="/Blog/Index">Other Posts</a>
                                </div>
                            </div>
                        </div>
                    }
                    <!--Comments-->
                    <div id="fb-root"></div>
                    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v14.0" nonce="dtQHWbl7"></script>
                    <div class="fb-comments" data-href="@Model.bg.BlogBackLink" data-width="680" data-numposts="5"></div>
                </div>
            </div>
        </div>
    </section>

