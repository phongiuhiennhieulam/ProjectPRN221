                                    </a>
                                <p>@blog.BlogDescriptions</p>
                                    <a class="btn btn-primary" href="/Product/BlogDetail?Id=@blog.BlogId">Read More</a>
                                </div>
                        }
                    </div>
                </div>
               @* @Html.PagedListPager(Model.blog, page => Url.Action("Index", new { page }))*@
