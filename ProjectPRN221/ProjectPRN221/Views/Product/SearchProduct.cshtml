        <div class="container">
            <div class="row">
            @using (Html.BeginForm("SearchProduct", "Product", FormMethod.Get))
                {
                    <div style="text-align: center">
                        <h3>Tìm thấy cho kết quả </h3>
                        <input type="hidden" name="search" value="@ViewBag.search" />
                        <input type="radio" onchange="this.form.submit()" name="result" value="product" @(ViewBag.result.Contains("product") ? "checked" : "") /><label style="margin-right: 10px; font-size: 20px; font-family:">Products</label>
                        <input type="radio" onchange="this.form.submit()" name="result" value="blog" @(ViewBag.result.Contains("blog") ? "checked" : "") /><label style="margin-right: 10px; font-size: 20px; font-family:">Blogs</label>
                    </div>
                }
            </div>
        </div>
        <section>
            <div class="container">
                <div class="row">
                @if (ViewBag.result == "product")
                    {
                    if (ViewBag.lstBlog != null)
                        {
                        foreach (var item in ViewBag.lstPro)
                            {
                                <div class="col-md-4 col-sm-6 col-xs-12 ">
                                    <a href="/Product/ProductDetail?Id=@item.ProductId">
                                        <input type="hidden" name="id" value="">
                                        <img src="~/images/product-details/product/@item.ProductImage" class="img-responsive" />
                                        <h3 class="right1" style="color: orange">@item.ProductName</h3>
                                    </a>
                                </div>
                            }
                        }
                        else
                        {
                            <h3>Không có sản phẩm nào được tìm thấy.</h3>
                        }
                    }
                @if (ViewBag.result == "blog")
                    {
                    if (ViewBag.lstBlog != null)
                        {
                        foreach (var item in ViewBag.lstBlog)
                            {
                                <div class="col-md-4 col-sm-6 col-xs-12 ">
                                    <a href="/Product/BlogDetail?Id=@item.BlogId">
                                        <input type="hidden" name="id" value="">
                                        <img src="~/images/blog/@item.BlogImages" class="img-responsive" />
                                        <h3 class="right1" style="color: orange">@item.BlogTitle</h3>
                                    </a>
                                </div>
                            }
                        }
                        else
                        {
                            <h3>Không có blog nào được tìm thấy.</h3>
                        }
                    }
                </div>
